---
const pathname = Astro.url.pathname;

const isActive = (path: string) => {
  if (path === "/") return pathname === "/" ? "active" : "";
  return pathname === path || pathname.startsWith(path + "/") ? "active" : "";
};
---

<header class="nav">
  <a href="/" class={isActive("/")}>
    <strong>coolmasterclown.com</strong>
  </a>

  <nav style="display:flex; gap:1rem;">
    <a href="/" class={isActive("/")}>Home</a>
    <a href="/posts" class={isActive("/posts")}>Posts</a>
  </nav>
</header>
